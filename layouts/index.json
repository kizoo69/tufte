{{- $pages := slice -}}
{{- range .Site.RegularPages -}}
  {{- $pages = $pages | append (dict
    "title" .Title
    "permalink" .Permalink
    "summary" (.Summary | plainify | truncate 200)
    "content" (.Plain | truncate 5000)
    "date" (.Date.Format "2006-01-02")
    "section" .Section
  ) -}}
{{- end -}}
{{- $pages | jsonify (dict "indent" "  ") -}}
